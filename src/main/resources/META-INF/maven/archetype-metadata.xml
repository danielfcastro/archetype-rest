<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="sementeArchetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<fileSets>
		<!-- Default maven package structure -->
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<excludes>
				<exclude>**/*.java</exclude>
			</excludes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/resources</directory>
			<excludes>
				<exclude>**/*.java</exclude>
			</excludes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/webapp</directory>
			<includes>
				<include>**/*.xhtml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/apt</directory>
			<includes>
				<include>**/*.apt</include>
			</includes>
		</fileSet>		
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/markdown</directory>
			<includes>
				<include>**/*.md</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/resources/</directory>
			<includes>
				<include>**/*.html</include>
			</includes>
		</fileSet>		
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/resources/css</directory>
			<includes>
				<include>**/*.css</include>
			</includes>
		</fileSet>		
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/resources/images</directory>
			<includes>
				<include>**/*.png</include>
				<include>**/*.jpg</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/xdoc</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/site/fml</directory>
			<includes>
				<include>**/*.fml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/webapp/WEB-INF</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/main/webapp/META-INF</directory>
			<includes>
				<include>**/*.MF</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/main/webapp/resources</directory>
			<includes>
				<include>**/*.jpg</include>
				<include>**/*.css</include>
				<include>**/*.gif</include>
				<include>**/*.png</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.classpath</include>
				<include>.project</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>		
	</fileSets>
</archetype-descriptor>
